<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item android:state_pressed="true">//눌렀을 때
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
            <solid android:color="#565040"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
            <solid android:color="#EAE1B6"/>
        </shape>
    </item>

    <item android:state_enabled="false"> //평소
        <shape android:shape="rectangle">
            <corners
                android:topLeftRadius="40dp"
                android:bottomRightRadius="40dp"/>
            <solid android:color="#77848D"/>
        </shape>
    </item>


</selector>
